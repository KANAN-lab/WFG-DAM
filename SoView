      margin-bottom: 20px;
      color: #343a40; /* Warna teks lebih gelap */
    }
    .btn-custom {
      width: 100%; 
      max-width: 300px;
      margin-bottom: 15px; /* Spasi antar tombol lebih besar */
      font-size: 16px; /* Font yang lebih besar */
      padding: 10px 0;
      position: relative;
      transition: all 0.3s ease; /* Transition untuk efek smooth */
    }
    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }
    .btn-primary:hover {
      background-color: #0056b3;
    }
    .btn-success {
      background-color: #28a745;
    }
    .btn-danger {
      background-color: #dc3545;
    }
    /* Smooth transition hover */
    .btn-custom:hover {
      transform: scale(1.05);
      transition: all 0.3s ease-in-out;
    }
    .disabled-btn {
      pointer-events: none;
      opacity: 0.6;
      transition: opacity 0.3s ease-in-out; /* Smooth transition untuk disable */
    }

    /* Animasi Ripple untuk pengecekan data */
    @keyframes ripple {
      0% {
        box-shadow: 0 0 0 0 rgba(0, 123, 255, 0.4), 0 0 0 10px rgba(0, 123, 255, 0);
      }
      70% {
        box-shadow: 0 0 0 20px rgba(0, 123, 255, 0), 0 0 0 30px rgba(0, 123, 255, 0);
      }
      100% {
        box-shadow: 0 0 0 30px rgba(0, 123, 255, 0), 0 0 0 40px rgba(0, 123, 255, 0);
      }
    }

    .checking-data {
      animation: ripple 1.5s infinite;
      transition: box-shadow 0.3s ease; /* Smooth transition untuk animasi */
    }

    /* Blinking Dots Animation */
    .dots {
